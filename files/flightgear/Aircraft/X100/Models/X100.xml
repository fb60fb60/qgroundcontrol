<?xml version="1.0"?>
<PropertyList>

  <path>X100.ac</path>

  <model>
    <path>Aircraft/X100/Models/SmokeTrail.xml</path>
    <name>SmokeTrail</name>
    <offsets>
      <x-m>0.234</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </offsets>
    <condition>
      <property>/sim/model/X100/smoke-trail</property>
    </condition>
  </model>
  
  <animation>
    <type>spin</type>
    <object-name>prop</object-name>
    <object-name>propcone</object-name>
    <property>engines/engine/rpm</property>
    <axis>
      <x>1</x>
    </axis>
  </animation>
  
  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>chrome.png</texture>
    <object-name>propcone</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>elevon.left</object-name>
    <object-name>elevon.rod.left</object-name>
    <property>surface-positions/left-elevon-pos-deg</property>
    <factor>-1</factor>
    <axis>
      <x1-m> 0.063</x1-m>
      <y1-m>-0.086</y1-m>
      <z1-m> 0.000</z1-m>
      <x2-m> 0.225</x2-m>
      <y2-m>-0.498</y2-m>
      <z2-m> 0.000</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>elevon.rod.left</object-name>
    <property>surface-positions/left-elevon-pos-deg</property>
    <factor>-0.88</factor>
    <axis>
      <x1-m> 0.132</x1-m>
      <y1-m>-0.230</y1-m>
      <z1-m> 0.012</z1-m>
      <x2-m> 0.130</x2-m>
      <y2-m>-0.225</y2-m>
      <z2-m> 0.012</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>elevon.right</object-name>
    <object-name>elevon.rod.right</object-name>
    <property>surface-positions/right-elevon-pos-deg</property>
    <axis>
      <x1-m> 0.063</x1-m>
      <y1-m> 0.086</y1-m>
      <z1-m> 0.000</z1-m>
      <x2-m> 0.225</x2-m>
      <y2-m> 0.498</y2-m>
      <z2-m> 0.000</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>elevon.rod.right</object-name>
    <property>surface-positions/right-elevon-pos-deg</property>
    <factor>0.88</factor>
    <axis>
      <x1-m> 0.132</x1-m>
      <y1-m> 0.230</y1-m>
      <z1-m> 0.012</z1-m>
      <x2-m> 0.130</x2-m>
      <y2-m> 0.225</y2-m>
      <z2-m> 0.012</z2-m>
    </axis>
  </animation>
</PropertyList>
